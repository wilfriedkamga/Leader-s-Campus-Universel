<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Création de la catégorie de module pour Campus Universel -->
    <record id="module_category_campus"
        model="ir.module.category">
        <field name="name">Campus Universel</field>
        <field name="description">Groupes de permissions pour le module Campus Universel</field>
        <field name="sequence">10</field>
    </record>
    <!-- Groupe : Administrateur Campus -->
    <record id="group_administrateur_campus"
        model="res.groups">
        <field name="name">Administrateur Campus</field>
        <field name="category_id"
            ref="module_category_campus" />
    </record>
    <!-- Groupe : Agent Campus -->
    <record id="group_agent_campus" model="res.groups">
        <field name="name">Agent Campus</field>
        <field name="category_id" ref="module_category_campus" />
    </record>
    <!-- Groupe : Gestionnaire Client Campus -->
    <record id="group_gestclient_campus" model="res.groups">
        <field name="name">Gestionnaire Client Campus</field>
        <field name="category_id" ref="module_category_campus" />
    </record>
    <!-- Groupe : Client Campus -->
    <record id="group_client_campus" model="res.groups">
        <field name="name">Client Campus</field>
        <field name="category_id" ref="module_category_campus" />
    </record>
    <!-- Groupe : Caissière Campus -->
    <record id="group_caissiere_campus"
        model="res.groups">
        <field name="name">Caissière Campus</field>
        <field name="category_id" ref="module_category_campus" />
    </record>
    
    <record id="group_secretaire_campus" model="res.groups">
        <field name="name">Secrétaire Campus</field>
        <field name="category_id" ref="module_category_campus"/>
    </record>

    <record id="group_super_gestionnaire_campus" model="res.groups">
        <field name="name">Super Gestionnaire</field>
        <field name="category_id" ref="module_category_campus" />
    </record>

</odoo>