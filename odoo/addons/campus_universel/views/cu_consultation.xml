<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="campus_universel_consultation_action" model="ir.actions.act_window">
        <field name="name">Consultation</field>
        <field name="res_model">campus_universel.consultation</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Cliquez ici pour ajouer un nouvel enregistrement</p>
        </field>
    </record>

    <record id="view_consultation_tree" model="ir.ui.view">
        <field name="name">campus_universel.registration.tree</field>
        <field name="model">campus_universel.consultation</field>
        <field name="arch" type="xml">
            <list string="Liste des Enregistrements">
                <field name="name" />
                <field name="date" />
                <field name="document_ids" />

            </list>
        </field>
    </record>

    <record id="view_consultation_form" model="ir.ui.view">
        <field name="name">campus_universel.registration.form</field>
        <field name="model">campus_universel.consultation</field>
        <field name="arch" type="xml">
            <form string="Dossier Candidat">
                <sheet>
                    <group>
                        <field name="name" string="Objet"/>
                        <field name="date" />
                        <field name="date" string="Prochain rendez vous" />
                        <notebook>
                            <page name='Rapport de la consultation'>
                                <field name="comment" widget='html' />
                            </page>
                        </notebook>

                    </group>

                </sheet>
            </form>
        </field>
    </record>


</odoo>