<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action pour afficher les actions -->
    <record id="cu_procedure_action_action" model="ir.actions.act_window">
        <field name="name">Actions à mener</field>
        <field name="res_model">campus_universel.procedure.action</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Cliquez ici pour ajouter une nouvelle action dans une étape de la procédure.</p>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="cu_procedure_action_form_view" model="ir.ui.view">
        <field name="name">cu_procedure_action.form</field>
        <field name="model">campus_universel.procedure.action</field>
        <field name="arch" type="xml">
            <form string="Action de procédure">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="etape_id"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vue liste -->
    <record id="cu_procedure_action_tree_view" model="ir.ui.view">
        <field name="name">cu_procedure_action.tree</field>
        <field name="model">campus_universel.procedure.action</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="etape_id"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="cu_procedure_action_kanban_view" model="ir.ui.view">
        <field name="name">cu_procedure_action.kanban</field>
        <field name="model">campus_universel.procedure.action</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="name"/></strong>
                            <div>
                                <span>Description : <field name="description"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
