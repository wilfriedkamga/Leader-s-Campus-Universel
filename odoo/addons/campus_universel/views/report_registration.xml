<odoo>
    <template id="report_registration">
        <t t-call="web.basic_layout">
            <div class="page">
                <h2>Bon d'Enregistrement</h2>
                <table class="table table-bordered">
                    <tr>
                        <td><strong>Nom</strong></td>
                        <td><t t-esc="o.name"/> <t t-esc="o.last_name"/></td>
                    </tr>
                    <tr>
                        <td><strong>Date de naissance</strong></td>
                        <td><t t-esc="o.birthday"/></td>
                    </tr>
                    <tr>
                        <td><strong>Genre</strong></td>
                        <td><t t-esc="o.gender"/></td>
                    </tr>
                    <tr>
                        <td><strong>Nationalité</strong></td>
                        <td><t t-esc="o.nationality"/></td>
                    </tr>
                    <tr>
                        <td><strong>Numéro de Passeport</strong></td>
                        <td><t t-esc="o.passport_number"/></td>
                    </tr>
                    <tr>
                        <td><strong>Date d'émission</strong></td>
                        <td><t t-esc="o.passport_issue_date"/></td>
                    </tr>
                    <tr>
                        <td><strong>Date d'expiration</strong></td>
                        <td><t t-esc="o.passport_expiry_date"/></td>
                    </tr>
                    <tr>
                        <td><strong>Téléphone</strong></td>
                        <td><t t-esc="o.phone"/></td>
                    </tr>
                    <tr>
                        <td><strong>Email</strong></td>
                        <td><t t-esc="o.email"/></td>
                    </tr>
                    <tr>
                        <td><strong>Adresse</strong></td>
                        <td><t t-esc="o.address"/></td>
                    </tr>
                    <tr>
                        <td><strong>Nom du Père</strong></td>
                        <td><t t-esc="o.father_name"/></td>
                    </tr>
                    <tr>
                        <td><strong>Profession du Père</strong></td>
                        <td><t t-esc="o.father_profession"/></td>
                    </tr>
                    <tr>
                        <td><strong>Nom de la Mère</strong></td>
                        <td><t t-esc="o.mother_name"/></td>
                    </tr>
                    <tr>
                        <td><strong>Profession de la Mère</strong></td>
                        <td><t t-esc="o.mother_profession"/></td>
                    </tr>
                    <tr>
                        <td><strong>Source de l'Information</strong></td>
                        <td><t t-esc="o.info_source"/></td>
                    </tr>
                    <tr>
                        <td><strong>Objectif du Voyage</strong></td>
                        <td><t t-esc="o.travel_purpose"/></td>
                    </tr>
                    <tr>
                        <td><strong>Commentaires</strong></td>
                        <td><t t-esc="o.comments"/></td>
                    </tr>
                </table>
            </div>
        </t>
    </template>
</odoo>
