<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cu_procedure_pays_action" model="ir.actions.act_window">
        <field name="name">Pays</field>
        <field name="res_model">campus_universel.procedure.pays</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Cliquez ici pour ajouter un nouveau pays.</p>
        </field>
    </record>

    <record id="cu_procedure_pays_form" model="ir.ui.view">
        <field name="name">cu_procedure_pays.form</field>
        <field name="model">campus_universel.procedure.pays</field>
        <field name="arch" type="xml">
            <form string="">

                <sheet>
                   <field name="flag" widget='image' class='oe_avatar' />
                    <group>
                        <field name="name" />
                        <field name="procedure_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="_tree" model="ir.ui.view">
        <field name="name">cu_procedure_pays.list</field>
        <field name="model">campus_universel.procedure.pays</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
                <field name="flag"/>
                <field name="procedure_ids" />
            </list>
        </field>
    </record>

</odoo>