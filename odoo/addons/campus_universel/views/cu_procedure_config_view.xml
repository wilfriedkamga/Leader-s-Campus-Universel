    <!--Affichage
    des utilisateurs de la plateforme-->

    <!-- Action pour les Administrateurs -->
    <record id="action_users_administrateurs" model="ir.actions.act_window">
        <field name="name">Administrateurs</field>
        <field name="res_model">res.groups</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
