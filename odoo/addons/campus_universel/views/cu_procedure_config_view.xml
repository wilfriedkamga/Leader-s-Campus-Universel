    </record>

    <!-- Action pour les Gestionnaires Clients -->
    <record id="action_users_gestclients" model="ir.actions.act_window">
        <field name="name">Gestionnaires Clients</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('group_agent_campus_id','=',True)]</field>
        <field name="context">
            {
            'form_view_ref': 'campus_universel.view_users_gestclients_form',
            'list_view_ref': 'campus_universel.view_users_gestclients_tree'
            }
        </field>
    </record>
    <!-- Vue Liste -->
    <record id="view_users_gestclients_tree" model="ir.ui.view">
        <field name="name">res.users.gestclients.tree</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <list string="Gestionnaires Clients">
                <field name="name" />
                <field name="nb_clients" string='Clients' />
                <field name="nb_prospects" string='Prospect' />
                <field name="nb_clients_af" string='Clients affectés' />
                <field name="group_agent_campus_id" />
                <button name="test_action"
                    type="object"
                    string=""
                    class="oe_highlight"
                    icon="fa-plus" />
                <button name="test_action"
                    type="object"
                    string=""
                    class="oe_highlight"
                    icon="fa-minus" />
            </list>
        </field>
    </record>

    <!-- Vue Formulaire -->
    <record id="view_users_gestclients_form" model="ir.ui.view">
        <field name="name">res.users.gestclients.form</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <form string="Gestionnaires Clients">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="login" />
                        <field name="commercial_id" />
                        <field name="group_agent_campus_id" />
                        <field name="email" />
                        <field name="procedure_ids" />
                        <field name="groups_id" widget="many2many_tags"
                            options="{'no_create': True}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Action pour les Clients -->
    <record id="action_users_clients" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <!--<field
        name="domain">[('groups_id', 'in', [ref('group_client_campus')])]</field>
        <field name="context">{'default_groups_id': [(6, 0, [ref('group_client_campus')])]}</field>-->

    </record>

    <!-- Action pour les Caissières -->
    <record id="action_users_caissieres" model="ir.actions.act_window">
        <field name="name">Caissières</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="domain">[('groups_id', 'in',
            [user.env.user.has_group('group_caissiere_campus')])]</field>
        <field name="context">{'default_groups_id': [(6, 0,
            [user.env.user.has_group('group_caissiere_campus')])]}</field>

    </record>

