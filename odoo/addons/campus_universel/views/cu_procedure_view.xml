<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cu_procedure_action" model="ir.actions.act_window">
        <field name="name">Type de proc√©dures</field>
        <field name="res_model">campus_universel.procedure</field>
        <field name="view_mode">kanban,form</field>
        <field name="domain">[('nature','=','record')]</field>
        <field name="context">{'default_nature':'record'}</field>
        <field name="help" type="html">
            <p>Cette action permet d'afficher les proc√©dures.</p>
        </field>
    </record>

    <record id="cu_procedure_action_trait" model="ir.actions.act_window">
        <field name="name">Traitement</field>
        <field name="res_model">campus_universel.procedure</field>
        <field name="view_mode">kanban,form</field>
        <field name="domain">[('nature','=','template')]</field>
        <field name="context">{'default_nature':'template'}</field>
        <field name="help" type="html">
            <p>Cette action permet d'afficher les proc√©dures.</p>
        </field>
    </record>

    <record id="action_procedure_etape_kanban" model="ir.actions.act_window">
        <field name="name">√âtapes du Projet</field>
        <field name="res_model">campus_universel.procedure.etape</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="cu_procedure_etape_kanban" />
        <field name="domain">[('procedure_id', '=', active_id)]</field>
        <field name="context">{'default_procedure_id': active_id}</field>
    </record>

    <record id="action_procedure_etape_kanban2" model="ir.actions.act_window">
        <field name="name">√âtapes du Projet</field>
        <field name="res_model">campus_universel.procedure.etape</field>
        <field name="view_mode">kanban</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Cette action permet d'afficher les proc√©dures.</p>
        </field>
    </record>

    <record id="cu_procedure_form" model="ir.ui.view">
        <field name="name">cu_procedure.form</field>
        <field name="model">campus_universel.procedure</field>
        <field name="arch" type="xml">
            <form string="" class='d-flex'>
                <header>
                    <button name="test_action"
                        type="object"
                        string="Imprimer"
                        class="oe_highlight"
                        icon="fa-print" />

                    <button name="activate_procedure"
                        type="object"
                        string="Activ√©"
                        class="oe_highlight"
                        help='Activer la proc√©dure la proc√©dure'
                    />
                    <button name="create_procedure"
                        type="object"
                        string="Ferm√©"
                        class="oe_highlight"
                        help='Proc√©dure en cr√©ation' />
                    <button name="block_procedure"
                        type="object"
                        string="Bloqu√©"
                        class="oe_highlight"
                        help='Bloquer la proc√©dure' />


                    <field name="statut" widget="statusbar"
                        statusbar_visible="new,actif,block" />
                </header>
                <sheet>
                    <field name="drapeau_pays" widget="image" class='oe_avatar'
                        options="{'preview_image': 'drapeau_pays'}" />
                    <group>
                        <field name="name" placeholder='Entrez le nom de la proc√©dure' />
                        <field name="cible_ids" widget='many2many_tags'
                            options="{'color_field': 'color'}" />
                        <field name="description"
                            placeholder='Entrez la description de la proc√©dure' />
                        <field name="pays_id" />
                        <field name="amount_min" />
                        <field name="amount_max" />
                        <field name='nature'/>
                        <field name="payment_mode_ids" widget='many2many_tags' />
                    </group>
                    <notebook>
                        <page name="name" string="√âtape du projet">
                            <button name="%(cu_procedure_etape_action)s"
                                type="action"
                                string="Voir les √âtapes"
                                class="oe_highlight"
                                icon="fa-tasks" />
                        </page>
                        <!-- üìÑ Onglet Documents de la proc√©dure -->
                        <page string="Les documents">
                            <field name="document_ids">
                                <list editable="bottom">
                                    <field name="name" />
                                    <field name="provenance" />
                                    <field name="category" />
                                    <field name="extension" />
                                    <field name="url" />
                                </list>
                            </field>
                        </page>

                        <!-- ‚úÖ Onglet Actions de la proc√©dure -->
                        <page string="Les actions">
                            <field name="action_ids">
                                <list editable="bottom">
                                    <field name="name" />
                                    <field name="description" />
                                    <button name="1"
                                    type="action"
                                    string="Voir Tutoriels"
                                    class="oe_highlight"
                                    icon="fa-eye" />
                                </list>
                            </field>
                        </page>
                        <page name="name" string="entr√©es et des sorities">
                            <button name="%(cu_procedure_etape_action)s"
                                type="action"
                                string="Voir les √âtapes"
                                class="oe_highlight"
                                icon="fa-tasks" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="cu_procedure_liste" model="ir.ui.view">
        <field name="name">cu_procedure.list</field>
        <field name="model">campus_universel.procedure</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name" />
                <field name="cible_ids" widget='many2many_tags' />
                <field name="pays_id" />
                <field name="payment_mode_ids" widget='many2many_tags' />
                <field name="drapeau_pays" widget="image" class='oe_avatar custom_image'
                    options="{'preview_image': 'drapeau_pays'}" />

            </list>
        </field>
    </record>

    <record id="cu_procedure_kanban" model="ir.ui.view">
        <field name="name">cu_procedure.kanban</field>
        <field name="model">campus_universel.procedure</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>

                    <t t-name="kanban-box">
                        <div class='d-flex flex-row align-items-center gap-3 p-2'>
                            <div class="d-flex align-items-center justify-content-center"
                                style="width: 50px; height: 50px;">
                                <field name="drapeau_pays" widget="image"
                                    class='oe_avatar custom_image'
                                    options="{'preview_image': 'drapeau_pays'}" />
                            </div>
                            <div class="d-flex flex-column">
                                <strong class='text-primary'>
                                    <field name="name" />
                                </strong>
                                <field name="cible_ids" widget='many2many_tags'
                                    options="{'color_field': 'color'}" class='mt-1' />
                                <field name="pays_id" />
                                <field name="color" widget="color_picker" />
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>