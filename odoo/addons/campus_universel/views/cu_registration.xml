<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="campus_universel_registration_action" model="ir.actions.act_window">
        <field name="name">Client potentiel</field>
        <field name="res_model">campus_universel.registration</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Cliquez ici pour ajouer un nouvel enregistrement</p>
        </field>
    </record>

    <record id="view_registration_tree" model="ir.ui.view">
        <field name="name">campus_universel.registration.tree</field>
        <field name="model">campus_universel.registration</field>
        <field name="arch" type="xml">
            <list string="Liste des Enregistrements">
                <field name="name" />
                <field name="last_name" />
                <field name="birthday" />
                <field name="phone" />
                <field name="email" />
                <field name="info_source" />
                <field name="desired_country" />
                <field name="travel_purpose" />
            </list>
        </field>
    </record>

    <record id="view_registration_form" model="ir.ui.view">
        <field name="name">campus_universel.registration.form</field>
        <field name="model">campus_universel.registration</field>
        <field name="arch" type="xml">
            <form string="Dossier Candidat">
                <sheet>
                    <header>
                        <!-- Bouton pour imprimer le bon d'enregistrement -->
                        <button name="action_print_registration" type="object"
                            string="Bon d'enregistrement" class="btn-primary" />
                    </header>
                    <group>
                        <field name="num_reg" />
                        <field name="photo" widget='image' class='oe_avatar' />
                    </group>
                    <!-- Début du notebook avec deux pages -->
                    <notebook>
                        <!-- Page 1 : Informations personnelles -->
                        <page string="Informations personnelles">
                            <group>
                                <group>
                                    <field name="name" />
                                    <field name="last_name" />
                                    <field name="birthday" />
                                    <field name="gender" />
                                    <field name="nationality" />
                                    <field name="phone" />
                                    <field name="email" />
                                    <field name="address" />
                                </group>
                                <group>
                                    <field name="father_name" />
                                    <field name="father_profession" />
                                    <field name="father_contact" />
                                    <field name="mother_name" />
                                    <field name="mother_profession" />
                                    <field name="mother_contact" />
                                </group>
                            </group>
                        </page>

                        <!-- Page 2 : Informations supplémentaires -->
                        <page string="Informations supplémentaires">
                            <group>
                                <group>
                                    <field name="info_source" />
                                    <field name="client_manager_name" />
                                    <field name="client_manager_contact" />
                                    <field name="travel_purpose" />
                                    <field name="study_level" />
                                    <field name="desired_country" />
                                </group>
                                <group>
                                    <field name="desired_school" />
                                    <field name="info_source" />
                                    <field name="client_manager_name" />
                                    <field name="client_manager_contact" />
                                    <field name="comments" />
                                </group>
                            </group>
                        </page>
                        <page string="Ouverture du dossier">
                            <group>
                                <group>
                                    <field name="registration_amount" readonly="1" />
                                </group>
                                <group>
                                    <field name="secretary_payment" />
                                    <field name="cashier_validation" />
                                </group>
                            </group>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_registration_kanban" model="ir.ui.view">
        <field name="name">campus_universel.registration.kanban</field>
        <field name="model">campus_universel.registration</field>
        <field name="arch" type="xml">
            <kanban default_group_by="info_source">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong t-esc="record.name.value" />
                            <t t-esc="record.last_name.value" />
                            <div>
                                <small>
                                    <t t-esc="record.phone.value" />
                                </small>
                            </div>
                            <div>
                                <small>
                                    <t t-esc="record.email.value" />
                                </small>
                            </div>
                            <div>
                                <span class="badge badge-info">
                                    <t t-esc="record.info_source.value" />
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>