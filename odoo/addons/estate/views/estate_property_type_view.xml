<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Cliquez ici pour ajouter un nouveau type de logement</p>
        </field>
    </record>

   <record id='estate_property_type_list' model='ir.ui.view'>
     <field name="name">Property Type list</field>
     <field name="model">estate.property.type</field>
     <field name="arch" type='xml'>
      <list>
         <field name="name"/>
         <field name="property_ids"/>
         <field name="offer_count"/>
         <field name="offer_ids"/>
      </list>
     </field>
   </record>

   <record id='estate_property_type_form' model='ir.ui.view'>
     <field name="name">Property Type list</field>
     <field name="model">estate.property.type</field>
     <field name="arch" type='xml'>
            <form string="formulaire">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="offer_count"/>
                        <field name="offer_ids" widget='many2many_tags'/>
                    </group>
                </sheet>
            </form>
     </field>
   </record>

</odoo>
